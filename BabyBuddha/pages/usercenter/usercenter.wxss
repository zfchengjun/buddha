/* pages/usercenter/usercenter.wxss */
page {
  background: url(http://dev.open.baobaofo.net/resources/bg1.jpg) #aaa9a9 repeat-y;
  background-size: 100% auto;
}
.userwrap{}
.userheader{
  background: #fff;
  padding: 35rpx 30rpx 35rpx 40rpx;
}
.userheadcon{
  width: 170rpx;
  height: 170rpx;
  border-radius: 100%;
  background: #ccc;
  margin: 0 auto;
  overflow: hidden;
}
.userheadimg{
  width: 100%;
  height: 100%;
}
.userinfo{
  text-align: center;
  margin-top: 10rpx;
}
.username{
  display: block;
  font-size: 36rpx;
  color: #333;
  line-height: 54rpx;
}
.userid{
  display: block;
  font-size: 30rpx;
  color: #ccc;
  line-height: 38rpx;
}

.infolist {
  margin-top: 20rpx;
  background: #fff;
}

.infoli {
  height: 98rpx;
  padding: 0 30px 0 40rpx;
  border-top: 1px solid #e0e0e0;
}

.infoli:nth-of-type(1){
  border-top: none;
}

.iconli {
  width: 54rpx;
  height: 54rpx;
  display: block;
}

.infotxt {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
  margin-left: 40rpx;
}